	  echo -n "Sisesta ridade arv: " #K체sib ridade arvu
	read arv
	  echo -n "Sisesta tarnide arv reas: " #K체sib t채rnide arvu reas
	read reas
	for (( i = 1 ; i <= $arv; i++ ))      ### Outer for loop ###
do
	  echo -n "$i. "
    	for (( j = 1 ; j <= $reas; j++ )) ### Inner for loop ###
	do
          echo -n "*"
	done
echo " "
done
