#!/bin/bash
#
# muutujate kasutamise näide
#
# defineerime muutuj aja omistame väärtuse
# väärtus saadakse whoami käsuga
kasutaja=`whoami`
# väljastame muutuja väärtuse koos seletusega
echo "Tere, $kasutaja!"
# loome ja väljastame kellaaja
kell=`date +'%H:%M'`
echo "Kell on $kell"
# loome ja väljastame kuupäeva
kuupaev=`date +'%d. %B'`
echo "Täna on $kuupaev"
