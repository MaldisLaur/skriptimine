#!/bin/bash
#See skript teeb ridades t채rne, koguse mis sa vastuseks paned
	  echo -e "Sisesta ridade arv: " #K체sib ridade arvu
	read arv
	  echo -e "Sisesta tarnide arv reas: " #K체sib t채rnide arvu reas
	read reas
	for (( i = 1 ; i <= $arv; i++ ))      ### Outer for loop ###
do
	  echo -n "$i."
	if [ $i -eq 1 -o $i -eq $arv ]; then
		for (( t=1; t<=$reas; t++ ))
		do
			echo -n "* "
		done
	else
		echo -n "* "
		for (( t=2; t<$reas; t++ ))
		do
			echo -n "  "
		done
		echo -n "* "
	fi
	echo ""
done
